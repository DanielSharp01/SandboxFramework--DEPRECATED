#version 150
precision highp float;
uniform vec4 color;
uniform vec2 light_pos;
varying vec4 vs_position;
varying vec4 vs_Color;
varying vec2 vs_UV;
varying float vs_TexID;
uniform sampler2D texture;

void main(void) {
	float intensity = 1.0 / length(vs_position.xy - light_pos);
	vec4 texColor;
	
	if (int(vs_TexID + 0.5) == 0) texColor = texture2D(texture, vs_UV);
	else texColor = vec4(1, 0, 0, 1);
	
	gl_FragColor = texColor; //* vs_Color * color  * intensity;
}